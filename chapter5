#5.10
investment = 500
interest = .07
years = 0
while investment < 1000:
    compound_interest = investment*interest
    investment += compound_interest
    years += 1
print(investment) 
print(years)       

#notes
prev = 1
curr = 1 
while curr <= 1000:
    prev, curr = curr, prev+curr
print(curr)

fib = [1,1]
while fib[-1] < 1000:
    add = fib[-1] + fib[-2]
    fib.append(add)
print(fib)

