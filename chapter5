#5.23
def pay(wage,hours):
    if hours < 40:
        print('$',hours * wage)
    elif hours > 40 and hours <= 60:
        print('$',40 * wage + (hours - 40) * 1.5*wage)
    elif hours > 60:
        print('$',40 * wage + 20*1.5*wage + (hours - 60) * 2*wage )
pay(10,61)
