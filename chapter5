#5.8
lst = [3, 1, 7, 4, 9, 2, 5]

def bubblesort(lst):
    for i in range(len(lst)-1,):
        for j in range(i):
            if lst[j] > lst[j+1]:
                lst[j],lst[j+1] = lst[j+1],lst[j]
                print(lst)
    print(lst)
bubblesort(lst)

[1, 2, 3, 4, 5, 7, 9]

#notes
t = [[4, 7, 2, 5], [5, 1, 9, 2], [8, 3, 6, 6]]

nrows = len(t)
ncols = len(t[0])
for i in range(nrows):
    for j in range(ncols):
        t[i][j] += 1
for a in t:
    for b in a:
        print(b,end=" ")
    print()

